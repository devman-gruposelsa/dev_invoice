<?xml version="1.0" encoding="utf-8"?>
  <odoo>
    <data>   
      <!-- View project.task form -->
      <record id="view_project_task_form_invoice" model="ir.ui.view">
          <field name="name">custom.view.project.task.form</field>
          <field name="model">project.task</field>
          <field name="inherit_id" ref="project.view_task_form2"/>
          <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='action_assign_to_me']" position="after">
                <button name="action_create_income_invoice"
                        string="Factura de ingreso"
                        type="object"
                        class="btn-primary"/>
                <button name="action_create_outcome_invoice"
                        string="Factura de egreso"
                        type="object"
                        class="btn-primary"/>
                <button name="action_create_storage_invoice"
                        string="Factura de almacenamiento"
                        type="object"
                        class="btn-primary"/>
            </xpath>
          </field>
      </record>
      <record model="ir.ui.view" id="custom_related_documents_form_view">
        <field name="name">custom.view.project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="import_forlder_016.related_documents_form_view"/>
        <field name="arch" type="xml">
            <!-- Insertar el campo transit_total_cost despuÃ©s de discharge_invoice_check -->
            <xpath expr="//field[@name='discharge_invoice_check']" position="after">
                <field name="transit_total_cost" string="Transit Total Cost" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
            </xpath>

        </field>
      </record>
    </data>
  </odoo>